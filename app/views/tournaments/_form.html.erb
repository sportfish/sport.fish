<%= simple_form_for(@tournament) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :name, required: true, autofocus: true %>
  	<%= f.input :location %>
  	<%= f.input :start_time %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
